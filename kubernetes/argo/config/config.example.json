{
  // Helm chart definitions: an array allowing one or more charts
  "helm": {
    "charts": [
      {
        // The URL of the Helm chart repository (must be a valid URI)
        "repoURL": "https://bjw-s-labs.github.io/helm-charts",

        // The name of the chart within that repo
        "chart": "app-template",

        // The chart version or Git tag/branch
        "targetRevision": "3.7.3",

        // Optional list of values files; defaults to ["values.yaml"] if omitted
        "valuesFiles": [
          "values.yaml",
          "overrides/custom-values.yaml"
        ]
      }

      // You may add more chart objects hereâ€¦
    ]
  },

  // ApplicationSet sync configuration
  "config": {
    // Whether to allow an Application to sync even if no resources are generated
    "allowEmpty": true,

    // Prune resources that are no longer defined in Git
    "prune": true,

    // Self-heal drifted resources back to the Git state
    "selfHeal": true
  }
}
