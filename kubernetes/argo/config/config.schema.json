{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ArgoCD ApplicationSet Helm Config",
  "type": "object",
  "required": ["helm", "config"],
  "properties": {
    "helm": {
      "type": "object",
      "required": ["charts"],
      "properties": {
        "charts": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["repoURL", "chart", "targetRevision"],
            "properties": {
              "repoURL": {
                "type": "string",
                "format": "uri"
              },
              "chart": {
                "type": "string",
                "minLength": 1
              },
              "targetRevision": {
                "type": "string",
                "minLength": 1
              },
              "valuesFiles": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                },
                "default": ["values.yaml"]
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "config": {
      "type": "object",
      "required": ["prune", "selfHeal", "allowEmpty"],
      "properties": {
        "prune": {
          "type": "boolean"
        },
        "selfHeal": {
          "type": "boolean"
        },
        "allowEmpty": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
