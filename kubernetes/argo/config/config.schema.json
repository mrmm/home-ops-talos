{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "helm": {
      "type": "object",
      "properties": {
        "charts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "repoURL": { "type": "string" },
              "chart": { "type": "string" },
              "targetRevision": { "type": "string" },
              "valuesFiles": {
                "type": "array",
                "items": { "type": "string" },
                "default": ["values.yaml"]
              }
            },
            "required": ["repoURL", "chart", "targetRevision"]
          }
        }
      },
      "required": ["charts"]
    },
    "config": {
      "type": "object",
      "properties": {
        "prune": {
          "type": "boolean",
          "default": true
        },
        "selfHeal": {
          "type": "boolean",
          "default": true
        },
        "allowEmpty": {
          "type": "boolean",
          "default": true
        },
        "syncWave": {
          "type": "integer",
          "default": 999
        }
      },
      "additionalProperties": false,
      "default": {}
    }
  },
  "additionalProperties": false
}
